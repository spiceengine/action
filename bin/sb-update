#!/bin/bash
MESSAGE="$*"
HISTORY_FILE="$SB_DIR/update-history.txt"
echo "[$(date '+%Y-%m-%d %H:%M:%S')] $MESSAGE" >> "$HISTORY_FILE"

# 初回コメントIDを環境変数から取得
if [ -n "$AGENT_INITIAL_COMMENT_ID" ]; then
  gh issue comment "$SESSION_NUMBER" --edit "$AGENT_INITIAL_COMMENT_ID" --body "$MESSAGE"
else
  echo "Error: 初回コメントIDが見つかりません (AGENT_INITIAL_COMMENT_ID)"
  echo "初回応答の投稿後にこのコマンドを使用してください"
  exit 1
fi